<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".comaprepage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="#08313A"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp">


        <Button
            android:id="@+id/more12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#08313A"
            android:drawableBottom="@drawable/baseline_more_horiz_24"
            android:text="m" />

        <Button
            android:id="@+id/button_add2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#1A5653"
            android:drawableBottom="@drawable/baseline_add_24"
            android:text="a" />

        <Button
            android:id="@+id/button_home22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#08313A"
            android:drawableBottom="@drawable/baseline_home_24"
            android:text="h" />

        <Button
            android:id="@+id/button_compare12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#08313A"
            android:drawableBottom="@drawable/baseline_compare_arrows_24"
            android:text="c" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/SearchBar"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/search_bar_background"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/girl_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.960"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="381dp"
        android:layout_height="639dp"
        android:layout_marginTop="44dp"
        app:cardBackgroundColor="#004343"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchBar"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#1A5653"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/baseline_camera_alt_24" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#1A5653"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About the location"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/add_location1"
                android:textSize="20dp"
                android:text="Add Location"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/clean2"
                android:textSize="20dp"
                android:text="Rate Cleanliness"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/safety2"
                android:textSize="20dp"
                android:text="Rate Safety"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/living2"
                android:textSize="20dp"
                android:text="Rate Cost of living"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/job2"
                android:textSize="20dp"
                android:text="Rate Job opportunities"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/amenities2"
                android:textSize="20dp"
                android:text="Rate Amenities"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/transportation2"
                android:textSize="20dp"
                android:text="Rate Transportation"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/culture2"
                android:textSize="20dp"
                android:text="Rate Culture"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/climate2"
                android:textSize="20dp"
                android:text="Rate Climate"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/community2"
                android:textSize="20dp"
                android:text="Rate Community"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#1A5653"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>